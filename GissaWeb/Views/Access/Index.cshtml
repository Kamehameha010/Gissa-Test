@model GissaWeb.Models.ViewModel.LoginUser
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="Content-Security-Policy" content="upgrade-insecure-requests">
    <title>GissaWeb</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">



    <link rel="stylesheet" href='@Url.Content("~/lib/bootstrap/dist/css/bootstrap.min.css")' />
    <link rel="stylesheet" href='@Url.Content("~/css/site.css")' />
    <link rel="stylesheet" href='@Url.Content("~/css/style.css")' />
    <link rel="stylesheet" href='@Url.Content("~/css/error_message.css")' />
</head>
<body id="body-login">
    <div class="login-clean">
        @using (Html.BeginForm())
        {
            <h2 class="sr-only">Inicio de Session</h2>
            <div class="ilustration">
                <i class="fa fa-user-circle-o"></i>
            </div>
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" required />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input class="btn btn-primary btn-block" type="submit" value="Entrar">
            </div>
        }
    </div>
  
    <div class="col-md-12 mt-3" id="alert">

    </div>


    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - GissaWeb
        </div>
    </footer>

    <script src='@Url.Content("~/lib/bootstrap/dist/js/bootstrap.bundle.min.js")'></script>
    <script  src='@Url.Content("~/js/access.js")' type="module"></script>

</body>
</html>